{
  "name": "bob-backend",
  "version": "0.0.3",
  "description": "Bob Backend - API for Claude Code instance management",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "turbowatch",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "migrate": "tsx src/cli/migrate.ts",
    "migrate:status": "tsx src/cli/migrate.ts status",
    "migrate:up": "tsx src/cli/migrate.ts up",
    "migrate:down": "tsx src/cli/migrate.ts down",
    "migrate:reset": "tsx src/cli/migrate.ts reset",
    "migrate:create": "tsx src/cli/migrate.ts create",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lightningcss": "^1.30.2",
    "node-pty": "^1.0.0",
    "sqlite3": "^5.1.6",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-session": "^1.18.2",
    "@types/node": "^20.19.15",
    "@types/passport": "^1.0.17",
    "@types/passport-github2": "^1.2.9",
    "@types/sqlite3": "^3.1.11",
    "@types/ws": "^8.18.1",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.7.0",
    "turbowatch": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "turbowatch": {
    "project": "src",
    "triggers": [
      {
        "expression": [
          "allof",
          [
            "not",
            [
              "dirname",
              "__tests__"
            ]
          ],
          [
            "anyof",
            [
              "match",
              "*.ts",
              "basename"
            ],
            [
              "match",
              "*.js",
              "basename"
            ]
          ]
        ],
        "name": "dev",
        "onChange": "tsx src/server.ts",
        "interruptible": true
      }
    ]
  }
}
