{
  "name": "bob-backend",
  "version": "0.0.3",
  "description": "Bob Backend - API for Claude Code instance management",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "tsx src/cli/migrate.ts",
    "migrate:status": "tsx src/cli/migrate.ts status",
    "migrate:up": "tsx src/cli/migrate.ts up",
    "migrate:down": "tsx src/cli/migrate.ts down",
    "migrate:reset": "tsx src/cli/migrate.ts reset",
    "migrate:create": "tsx src/cli/migrate.ts create",
    "test": "npx vitest run",
    "test:ui": "vitest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-pty": "^1.0.0",
    "sqlite3": "^5.1.6",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.19",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9"
  }
}
