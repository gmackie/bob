{
  "name": "bob",
  "version": "0.0.4",
  "private": true,
  "description": "Bob - AI Agent Multi-Instance Manager",
  "author": "Bob Team <sean@reedster.llc>",
  "license": "GPL-3.0",
  "homepage": "https://github.com/your-org/bob",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": "^10.19.0"
  },
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "pnpm -F @bob/auth generate",
    "db:push": "turbo -F @bob/db push",
    "db:studio": "turbo -F @bob/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @bob/nextjs...",
    "dev:expo": "turbo watch dev -F @bob/expo...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "dev:mobile": "./scripts/dev-mobile.sh",
    "dev:legacy": "concurrently \"npm run dev:legacy:backend\" \"npm run dev:legacy:frontend\"",
    "dev:legacy:clean": "lsof -ti:47285 | xargs -r kill -9; lsof -ti:43829 | xargs -r kill -9; npm run dev:legacy",
    "dev:legacy:backend": "cd backend && npm run dev",
    "dev:legacy:frontend": "cd frontend && npm run dev",
    "dev:gateway": "pnpm -F @bob/gateway dev",
    "dev:nextjs": "turbo watch dev -F @bob/nextjs... -F @bob/gateway",
    "migrate:up": "cd backend && npm run migrate:up",
    "migrate:status": "cd backend && npm run migrate:status"
  },
  "devDependencies": {
    "@bob/prettier-config": "workspace:*",
    "@turbo/gen": "^2.5.8",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^10.0.0",
    "prettier": "catalog:",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "@types/pg": "8.16.0"
    }
  },
  "prettier": "@bob/prettier-config"
}
