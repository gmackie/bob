{
  "name": "@bob/monitoring",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./web": {
      "types": "./dist/web/index.d.ts",
      "default": "./src/web/index.ts"
    },
    "./native": {
      "types": "./dist/native/index.d.ts",
      "default": "./src/native/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@bob/config": "workspace:*",
    "@sentry/nextjs": "^9.27.0",
    "@sentry/react-native": "^6.14.0"
  },
  "devDependencies": {
    "@bob/eslint-config": "workspace:*",
    "@bob/prettier-config": "workspace:*",
    "@bob/tsconfig": "workspace:*",
    "@types/react": "19.1.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "prettier": "@bob/prettier-config"
}
